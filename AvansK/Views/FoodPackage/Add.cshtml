@using Core.Domain;
@using Portal.Models;

@{
    ViewData["Titel"] = "Add";
}

@model CreateFoodPackage

<h1>Add</h1>

<form asp-action="NewPackage" method="post">

    <div class="form-group">
        <label asp-for="Name">Naam</label>
        <input class="form-control" asp-for="Name" />
    </div>

    @for (int i = 0; i < Model.Products.Count; i++)
    {
        <div>
            <label>@Model.Products[i].Name</label>
            <input type="checkbox" name="SelectedProductIds" value="@Model.Products[i].Id" />
        </div>
    }

    <div class="form-group row">
        <button class="btn btn-primary col-sm-4 text-center">Add product</button>
    </div>
</form>



